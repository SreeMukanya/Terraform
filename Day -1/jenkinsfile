pipeline {
    agent any

    stages {
        stage('Gitcheckout') {
            steps {
                git branch: 'main', url: 'https://github.com/SreeMukanya/Terraform.git'
            }
        }
        stage('terraform init') {
            steps {
               dir('Day -1') {
             sh 'terraform init'
}
            }
        }
        
         stage('terraform plan') {
            steps {
               dir('Day -1') {
             sh 'terraform plan -out=tfplan'
}
            }
        }
 
  stage('terraform apply/destroy') {
            steps {
               dir('Day -1') {
              sh 'terraform ${sree} -auto-approve'
}
            }
        }
        }
        
    }

